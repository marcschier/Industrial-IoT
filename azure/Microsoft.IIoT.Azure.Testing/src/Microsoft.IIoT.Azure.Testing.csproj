<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>Azure test harnesses and containers</Description>
    <Antlr4UseCSharpGenerator>True</Antlr4UseCSharpGenerator>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Antlr4" Version="4.6.6" />
    <PackageReference Include="Microsoft.Azure.Devices.Client" Version="1.33.1" />
  </ItemGroup>
  <ItemGroup>
    <Antlr4 Update="**/*.g4">
      <Generator>MSBuild:Compile</Generator>
      <CustomToolNamespace>Microsoft.IIoT.Azure.IoTHub.Testing.SqlParser</CustomToolNamespace>
      <Listener>False</Listener>
      <Visitor>False</Visitor>
    </Antlr4>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\extensions\Microsoft.IIoT.Extensions.Testing\src\Microsoft.IIoT.Extensions.Testing.csproj" />
    <ProjectReference Include="..\..\Microsoft.IIoT.Azure.IoTEdge\src\Microsoft.IIoT.Azure.IoTEdge.csproj" />
    <ProjectReference Include="..\..\Microsoft.IIoT.Azure.IoTHub\src\Microsoft.IIoT.Azure.IoTHub.csproj" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\extensions\Microsoft.IIoT.Extensions.NewtonSoft\src\Microsoft.IIoT.Extensions.NewtonSoft.csproj" />
  </ItemGroup>
</Project>