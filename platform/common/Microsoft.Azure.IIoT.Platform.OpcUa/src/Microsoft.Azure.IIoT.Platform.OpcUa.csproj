    <PackageReference Include="Microsoft.Azure.IIoT.Opc.Ua.Client" Version="1.4.362.52" />
    <PackageReference Include="Microsoft.Azure.IIoT.Opc.Ua.Client.ComplexTypes" Version="1.4.362.52" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\..\extensions\Microsoft.Azure.IIoT.Extensions.NewtonSoft\src\Microsoft.Azure.IIoT.Extensions.NewtonSoft.csproj" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\..\platform\common\Microsoft.Azure.IIoT.Platform.Abstractions\src\Microsoft.Azure.IIoT.Platform.Abstractions.csproj" />
  </ItemGroup>
